/*每个页面公共css */
page {
  background: #2a3a52;
}
.tab {
  position: fixed;
  z-index: 10;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  background: -webkit-linear-gradient(315deg, #7692bb 0%, #425985 100%);
  background: linear-gradient(135deg, #7692bb 0%, #425985 100%);
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  text-align: center;
}
.tab .flex-item {
  position: relative;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
.tab .flex-item .title {
  position: absolute;
  bottom: 7rpx;
  width: 100%;
  font-size: 22rpx;
  font-weight: 400;
  color: #ffffff;
  line-height: 30rpx;
  opacity: 0.5;
}
.tab .tab_home image {
  width: 45rpx;
  height: 45rpx;
  margin-top: 11rpx;
}
.tab .tab_car image {
  width: 48rpx;
  height: 42rpx;
  margin-top: 14rpx;
}
.tab .tab_order image {
  width: 40rpx;
  height: 44.5rpx;
  margin-top: 12rpx;
}
.tab .tab_my image {
  width: 43.2rpx;
  height: 43.2rpx;
  margin-top: 11rpx;
}

